<div class="card border-0 shadow-sm bg-white text-dark">
  <div class="card-header d-flex justify-content-between align-items-center bg-light border-bottom">
    <h4 class="mb-0">Add Page</h4>
    <a href="/view/residents" class="btn btn-outline-secondary btn-sm">
      <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
  </div>

  <div class="card-body">
    <form action="/residents/add/" method="POST">
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="residentName" class="form-label">Resident Name</label>
          <input type="text" class="form-control" id="residentName" name="residentName" required>
          <div class="form-text">Name must contain only letters, numbers, spaces, and forward slashes.</div>
        </div>

        <div class="col-md-6 mb-3">
          <label for="floor" class="form-label">Floor</label>
          <input type="number" class="form-control" id="floor" name="floor" min="1" max="40" step="0.01" required>
          <div class="form-text">Floor must be between 1 and 40.</div>
        </div>

        <div class="col-md-6 mb-3">
          <label for="yOB" class="form-label">YOB</label>
          <input type="number" class="form-control" id="yOB" name="yOB" min="1940" max="2025" step="1" required>
          <div class="form-text">Enter like 2004 is your birthday.</div>
        </div>

        <div class="col-md-6 mb-3">
          <label for="apartment" class="form-label">Apartment</label>
          <select class="form-select" id="apartment" name="apartment" required>
            <% apartments.forEach(apartment => { %>
              <option value="<%= apartment._id %>" <%= apartment.equals(apartment._id) ? 'selected' : '' %>>
                <%= apartment.apartmentName %>
              </option>
            <% }); %>
          </select>
        </div>

        <div class="col-md-12 mb-3">
          <label for="residentDescription" class="form-label">Resident Description</label>
          <textarea class="form-control" id="residentDescription" name="residentDescription" placeholder="Enter resident description" rows="4" required></textarea>
        </div>

        <div class="col-md-12 mb-3">
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="isOwned" name="isOwned">
            <label class="form-check-label" for="isOwned">Owned Resident</label>
          </div>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Save Changes
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
